<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notificacao">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agenda 7 - Desenvolvimento mobile"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnnotificar"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"
        />
    <Button
        android:id="@+id/btnnotificar"
        android:text="Notificar"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
            />

    <Button
        android:id="@+id/btnnotificar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificar 2"
        android:layout_below="@id/btnnotificar"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>