<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#C3C3C3"
        android:text="Telefone"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/btnSobre"
        app:layout_constraintTop_toBottomOf="@+id/btnSobre" />

    <TextView
        android:id="@+id/txtChoco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:text="ChocoFeliz"
        android:textColor="#F0F0F0"
        android:textSize="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#C3C3C3"
        android:text="Sobre a empresa"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/txtChoco"
        app:layout_constraintTop_toBottomOf="@+id/txtChoco" />

</androidx.constraintlayout.widget.ConstraintLayout>